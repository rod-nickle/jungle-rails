<section class="Sessions-new">

  <header class="page-header">
    <h1>Login</h1>
  </header>

  <%= form_tag :login do %>
    <div class="form-group">
      <label for="email">Email</label>
      <%= text_field_tag :email, nil, autocomplete: "off", class: "form-control", id: "email" %>
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <%= password_field_tag :password, nil, autocomplete: "off", class: "form-control", id: "password" %>
    </div>
    <%= submit_tag "Login", class: 'btn btn-primary' %>
  <% end %>

</section>